{% extends 'base.html.twig' %}

{% block title %}Admin | Skills
{% endblock %}

{% block sidebar %}
	{{ include('/components/adminsidebar.html.twig') }}
{% endblock %}
{% block navbar %}
	{{ include('/components/navbar.html.twig') }}
{% endblock %}

{% block layout %}
	<div class="form-bg mx-auto col-10 col-md-8 col-lg-6">
		<div class="container">
			<div class="row">
				
				<h3 class="title">Create Skill</h3>
				{# templates/task/new.html.twig #}
				{{ form_start(form, {
					'method': 'POST',
				}) }}

				<div class="form-group">
					{{ form_row(form.name, {
						'attr': {
							'class': 'form-control',
							'help': 'Wont'
						}
					}) }}
				</div>

				<button class="btn btn-dark" type="submit">Create</button>
				{{ form_end(form) }}
					
			</div>
		</div>
	</div>
{% endblock %}
{% block footer %}
	{{ include('/components/footer.html.twig') }}
{% endblock %}