{# Statistics with Charts #}
<div
	class="row">

	{# Row 1 #}
	<div class="row">
		<div class="col-lg-8 d-flex align-items-strech">
			<div class="card w-100">
				<div class="card-body">
					<div class="d-sm-flex d-block align-items-center justify-content-between mb-9">
						<div class="mb-3 mb-sm-0">
							<h5 class="card-title fw-semibold">Revenue By Month</h5>
						</div>
						<div>
							<select class="form-select">
								<option value="1">1 Month</option>
								<option value="2">6 Month</option>
								<option value="3">1 Year</option>
								<option value="4">5 Year</option>
								<option value="5">All time</option>
							</select>
						</div>
					</div>
					<div>{{ render_chart(companyGrowthChart) }}</div>
				</div>
			</div>
		</div>
		<div class="col-lg-4">
			<div class="row">
				<div
					class="col-lg-12">
					<!-- Year Revenue -->
					<div class="card">
						<div class="card-body">
							<div class="row alig n-items-start">
								<div class="col-6">
									<h4 class="card-title mb-9 fw-semibold">
										Yearly Revenue
									</h4>
									<h4 class="fw-semibold mb-3">₹{{ yearBudget }}</h4>
									<div class="d-flex align-items-center pb-1">
										<span class="me-2 rounded-circle bg-light-success round-20 d-flex align-items-center justify-content-center">
											<i class="ti ti-calendar-time"></i>
										</span>
										<p class="fs-3 mb-0">Year :
										</p>
										<p class="text-dark me-1 fs-3 mb-0">&nbsp;{{ date | date('Y') }}
										</p>
									</div>
									<br>
									<div class="d-flex align-items-center pb-1">
										<span class="me-2 rounded-circle bg-light-primary round-20 d-flex align-items-center justify-content-center">
											<i class="ti ti-trending-up"></i>
										</span>
										<p class="fs-3 mb-0">Rate :
										</p>
										<p class="text-dark me-1 fs-3 mb-0">&nbsp;{{ growthRate }}
											%
										</p>
									</div>
								</div>
								<div class="col-6">
									<div class="d-flex justify-content-end">
										{{ render_chart(yearBudgetChart) }}
									</div>
								</div>
							</div>
						</div>
						<div id="earning"></div>
					</div>
				</div>
				<div
					class="col-lg-12">
					<!-- Monthly Earnings -->
					<div class="card">
						<div class="card-body">
							<div class="row alig n-items-start">
								<div class="col-8">
									<h4 class="card-title mb-9 fw-semibold">
										Monthly Earnings
									</h4>
									<h4 class="fw-semibold mb-3">₹{{ monthBudget }}</h4>
									<div class="d-flex align-items-center pb-1">
										<span class="me-2 rounded-circle bg-light-success round-20 d-flex align-items-center justify-content-center">
											<i class="ti ti-calendar-time"></i>
										</span>
										<p class="fs-3 mb-0">Month :
											{{ date | date('M') }}</p>
									</div>
									<br>
									<div class="d-flex align-items-center pb-1">
										<span class="me-2 rounded-circle bg-light-danger round-20 d-flex align-items-center justify-content-center">
											<i class="ti ti-info-circle"></i>
										</span>
										<p class="fs-3 mb-0">Budget according to current month.</p>
									</div>
								</div>
								<div class="col-4">
									<div class="d-flex justify-content-end">
										<div class="text-white bg-secondary rounded-circle p-6 d-flex align-items-center justify-content-center">
											<i class="ti ti-currency-dollar fs-6"></i>
										</div>
									</div>
								</div>
							</div>
						</div>
						<div id="earning"></div>
					</div>
				</div>
			</div>
		</div>
	</div>

	{# Row 2 #}
	<div class="row">
		<div class="col-lg-8 d-flex align-items-stretch">
			<div class="card w-100">
				<div class="card-body p-4">
					<h5 class="card-title fw-semibold mb-4">Top Most Companies</h5>
					<div class="table-responsive">
						<table class="table text-nowrap mb-0 align-middle">
							<thead class="text-dark fs-4">
								<tr>
									<th class="border-bottom-0">
										<h4 class="fw-semibold mb-0">Id</h4>
									</th>
									<th class="border-bottom-0">
										<h4 class="fw-semibold mb-0">Company Name</h4>
									</th>
									<th class="border-bottom-0">
										<h4 class="fw-semibold mb-0">Amount</h4>
									</th>
									<th class="border-bottom-0">
										<h4 class="fw-semibold mb-0">Users Enrolled</h4>
									</th>
								</tr>
							</thead>
							<tbody>
								{% for data in topCompanies %}
								<tr>
									<td class="border-bottom-0">
										<h4 class="fw-semibold mb-0">{{ loop.index }}</h4>
									</td>
									<td class="border-bottom-0">
										<h4 class="fw-semibold mb-1">{{ data.name }}</h4>
										<span class="fw-normal fs-3">Established At : {{ data.established_at | ago }}</span>
									</td>
									<td class="border-bottom-0">
										<h4 class="fw-semibold mb-0 fs-5">₹ {{ data.Amount | number_format}}</h4>
									</td>
									<td class="border-bottom-0">
										<p class="mb-0 fw-normal fs-4">{{ data.UserCount }} Users</p>
									</td>
								</tr>
								{% endfor %}
							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>
		<div class="col-lg-4 d-flex align-items-stretch">
			<div class="card w-100">
				<div class="card-body p-4">
					<h5 class="card-title fw-semibold mb-4">Subscription Statistics</h5>
					<div>{{ render_chart(subscriptionChart) }}</div>
				</div>
			</div>
		</div>
	</div>


	<div class="row">
		<div class="col-lg-8 d-flex align-items-stretch">
			<div class="card w-100">
				<div class="card-body p-4">
					<div class="d-sm-flex d-block align-items-center justify-content-between mb-9">
						<div class="mb-3 mb-sm-0">
							<h5 class="card-title fw-semibold">Company Growth</h5>
						</div>
						<div>
							<select class="form-select">
								<option value="1">Year</option>
								<option value="2">6 Months</option>
							</select>
						</div>
					</div>
					<div>{{ render_chart(companyGrowthChart) }}</div>
				</div>
			</div>
		</div>
		<div class="col-lg-4 d-flex align-items-stretch">
			<div class="card w-100">
				<div class="card-body p-4">
					<h5 class="card-title fw-semibold mb-4">Company Status</h5>
					<div>{{ render_chart(companyChart) }}</div>
				</div>
			</div>
		</div>
	</div>

	{% if flag == 'No data' %}
		<div class="col-lg-4 d-flex align-items-strech">
			<div class="card w-100">
				<div class="card-body">
					<h4>Company</h4>
					<div>There is no statistics.</div>
				</div>
			</div>
		</div>
	{% else %}
		{% if flag == 'Super Admin' %}
			<div class="col-lg-4 d-flex align-items-strech">
				<div class="card w-100">
					<div class="card-body">
						<h4>Company</h4>
						<div>{{ render_chart(companyChart) }}</div>
					</div>
				</div>
			</div>
		{% endif %}
		<div class="col-lg-4 d-flex align-items-strech">
			<div class="card w-100">
				<div class="card-body">
					<h4>User</h4>
					<div>{{ render_chart(userChart) }}</div>
				</div>
			</div>
		</div>
		<div class="col-lg-6 d-flex align-items-strech">
			<div class="card w-100">
				<div class="card-body">
					<h4>Subscription</h4>
					<div>{{ render_chart(subscriptionChart) }}</div>
				</div>
			</div>
		</div>
		<div class="col-lg-6 d-flex align-items-strech">
			<div class="card w-100">
				<div class="card-body">
					<h4>User Growth</h4>
					<div>{{ render_chart(companyGrowthChart) }}</div>
				</div>
			</div>
		</div>
	</div>
{% endif %}
