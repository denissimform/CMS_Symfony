{% extends 'base.html.twig' %}
{% block title %} Skills {% endblock %}
{% block body %}
	<center><a class="btn btn-primary" href="{{ path('app_admin_skills_create') }}">Create Skill</a></center>
	<div class="mx-auto col-10 col-md-8 col-lg-6">
		<table class="table table-dark table-striped">
			<thead>
				<tr>
					<th scope="col">#</th>
					<th scope="col">Name</th>
					<th scope="col">CreatedAt</th>
					<th scope="col">UpdatedAt</th>
					<th scope="col">Actions</th>
				</tr>
			</thead>
			<tbody>
				{% for skill in skills %}
					<tr>
						<th scope="row">{{ skill.id }}</th>
						<td>{{ skill.name }}</td>
						<td>{{ skill.createdAt|date }}</td>
						<td>{{ skill.UpdatedAt|date }}</td>
						<td>
							<a href="{{ path('app_admin_skills_update',{id:skill.id}) }}">EDIT</a>
							&nbsp;&nbsp;<a href="{{ path('app_admin_skills_delete',{id:skill.id}) }}">DELETE</a>
						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
{% endblock body %}
