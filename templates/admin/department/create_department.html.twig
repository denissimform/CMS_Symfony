{% extends '/admin/homepage.html.twig' %}

{% block layout %}

	<div class="form-bg mx-auto col-10 col-md-8 col-lg-6">
		<div class="container">
			<div class="row">

				<h3 class="title">Create Department</h3>

				{{ form_start(form, {
					'method': 'POST',
				}) }}

				<div class="form-group">
					{{ form_row(form.name, {
						'attr': {
							'class': 'form-control',
						}
					}) }}
				</div>

				<div class="form-group">
					{{ form_row(form.description, {
						'attr': {
							'class': 'form-control',
						}
					}) }}
				</div>
				<button class="btn btn-dark" type="submit">Create</button>
				{{ form_end(form) }}

			</div>
		</div>
	</div>
{% endblock %}