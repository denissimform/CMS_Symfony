{% extends 'base.html.twig' %}
{% block title %} Subscription {% endblock %}
{% block layout %}
	<center><a class="btn btn-primary" href="{{ path('app_admin_skills_create') }}">Create Skill</a></center>
	<div class="mx-auto col-10 col-md-8 col-lg-6">
		<table class="table table-dark table-striped">
			<thead>
				<tr>
					<th scope="col">#</th>
					<th scope="col">Type</th>
					<th scope="col">Duration</th>
					<th scope="col">Price</th>
					<th scope="col">criteria</th>
					<th scope="col">createdat</th>
					<th scope="col">Action</th>
				</tr>
			</thead>
			<tbody>
				{% for subscription in subscriptions %}
					<tr>
						<th scope="row">{{ subscription.id }}</th>
						<td>{{ subscription.type }}</td>
						<td>{{ subscription.duration }}</td>
						<td>{{ subscription.price }}</td>
						<td>{{ subscription.criteriaDept }}, {{ subscription.criteriaUser }}, {{ subscription.criteriaStorage }}</td> 
						<td>{{ subscription.createdAt|ago }}, {{ subscription.UpdatedAt|date }}</td>
						<td>
							<a href="{{ path('app_admin_subscription_update_status',{id:subscription.id}) }}">
                                {{ subscription.isActive ? 'INACTIVE':'ACTIVE' }}
                            </a>&nbsp;
							{% if subscription.isActive %}
                            <a href="{{ path('app_admin_subscription_update',{id:subscription.id}) }}">EDIT</a>
							{% endif %}
						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
{% endblock layout %}
