{% extends 'base.html.twig' %}

{% block title %}User Profile
{% endblock %}

{% block sidebar %}
	{{ include('/admin/components/adminsidebar.html.twig') }}
{% endblock %}
{% block navbar %}
	{{ include('/components/navbar.html.twig') }}
{% endblock %}

{% block layout %}
	<section style="background-color: #fff;">
		<div class="container py-5">

			<div class="row">
				<div class="col-lg-4">
					<div class="card mb-4">
						<div class="card-body text-center">
							<img src="{{ asset('images/profile/user-2.jpeg') }}" alt="avatar" class="rounded-circle img-fluid" style="width: 150px;">
							<h5 class="my-3">@{{ user.username }}</h5>
							<p class="text-muted mb-1">Full Stack Developer</p>
							<p class="text-muted mb-4">Bay Area, San Francisco, CA</p>
							<div class="d-flex justify-content-center mb-2">
								<a href="{{ path('app_user_profile_update', {id:user.id}) }}" class="btn btn-secondary">Edit Profile</a>
								<button type="button" class="btn btn-outline-primary ms-1">Message</button>
							</div>
						</div>
					</div>
					<div class="card mb-4 mb-lg-0">
						<div class="card-body p-0">
							<ul class="list-group list-group-flush rounded-3">
								<li class="list-group-item d-flex justify-content-between align-items-center p-3">
									<i class='bx bx-globe' style="color: rgb(231, 247, 18);"></i>
									<p class="mb-0">https://mdbootstrap.com</p>
								</li>
								<li class="list-group-item d-flex justify-content-between align-items-center p-3">
									<i class='bx bxl-github' style="color: #333333;"></i>
									<p class="mb-0">mdbootstrap</p>
								</li>
								<li class="list-group-item d-flex justify-content-between align-items-center p-3">
									<i class='bx bxl-twitter' style="color: #55acee;"></i>
									<p class="mb-0">@mdbootstrap</p>
								</li>
								<li class="list-group-item d-flex justify-content-between align-items-center p-3">
									<i class='bx bxl-instagram' style="color: #ac2bac;"></i>
									<p class="mb-0">mdbootstrap</p>
								</li>
								<li class="list-group-item d-flex justify-content-between align-items-center p-3">
									<i class='bx bxl-facebook-circle' style="color: #3b5998;"></i>
									<p class="mb-0">mdbootstrap</p>
								</li>
							</ul>
						</div>
					</div>
				</div>
				<div class="col-lg-8">
					<div class="card mb-4">
						<div class="card-body">
							<div class="row">
								<div class="col-sm-3">
									<p class="mb-0">Full Name</p>
								</div>
								<div class="col-sm-9">
									<p class="text-muted mb-0">{{ user.firstName }}
										{{ user.lastName }}</p>
								</div>
							</div>
							<hr>
							<div class="row">
								<div class="col-sm-3">
									<p class="mb-0">Email</p>
								</div>
								<div class="col-sm-9">
									<p class="text-muted mb-0">{{ user.email }}</p>
								</div>
							</div>
							<hr>
							<div class="row">
								<div class="col-sm-3">
									<p class="mb-0">Gender</p>
								</div>
								<div class="col-sm-9">
									<p class="text-muted mb-0">{{ user.gender }}</p>
								</div>
							</div>
							<hr>
							<div class="row">
								<div class="col-sm-3">
									<p class="mb-0">Company</p>
								</div>
								<div class="col-sm-9">
									<p class="text-muted mb-0">{{ user.company.name }}</p>
								</div>
							</div>
							<hr>
							<div class="row">
								<div class="col-sm-3">
									<p class="mb-0">Company</p>
								</div>
								<div class="col-sm-9">
									<p class="text-muted mb-0">{{ user.dob|date }}</p>
								</div>
							</div>
						</div>
					</div>
					<div class="row">
						<div class="col-md-6">
							<div class="card mb-4 mb-md-0">
								<div class="card-body">
									<p class="mb-4">
										<span class="text-primary font-italic me-1">assigment</span>
										Project Status
									</p>
									<p class="mb-1" style="font-size: .77rem;">Web Design</p>
									<div class="progress rounded" style="height: 5px;">
										<div class="progress-bar" role="progressbar" style="width: 80%" aria-valuenow="80" aria-valuemin="0" aria-valuemax="100"></div>
									</div>
									<p class="mt-4 mb-1" style="font-size: .77rem;">Website Markup</p>
									<div class="progress rounded" style="height: 5px;">
										<div class="progress-bar" role="progressbar" style="width: 72%" aria-valuenow="72" aria-valuemin="0" aria-valuemax="100"></div>
									</div>
									<p class="mt-4 mb-1" style="font-size: .77rem;">One Page</p>
									<div class="progress rounded" style="height: 5px;">
										<div class="progress-bar" role="progressbar" style="width: 89%" aria-valuenow="89" aria-valuemin="0" aria-valuemax="100"></div>
									</div>
									<p class="mt-4 mb-1" style="font-size: .77rem;">Mobile Template</p>
									<div class="progress rounded" style="height: 5px;">
										<div class="progress-bar" role="progressbar" style="width: 55%" aria-valuenow="55" aria-valuemin="0" aria-valuemax="100"></div>
									</div>
									<p class="mt-4 mb-1" style="font-size: .77rem;">Backend API</p>
									<div class="progress rounded mb-2" style="height: 5px;">
										<div class="progress-bar" role="progressbar" style="width: 66%" aria-valuenow="66" aria-valuemin="0" aria-valuemax="100"></div>
									</div>
								</div>
							</div>
						</div>
						<div class="col-md-6">
							<div class="card mb-4 mb-md-0">
								<div class="card-body">
									<p class="mb-4">
										<span class="text-primary font-italic me-1">assigment</span>
										Project Status
									</p>
									<p class="mb-1" style="font-size: .77rem;">Web Design</p>
									<div class="progress rounded" style="height: 5px;">
										<div class="progress-bar" role="progressbar" style="width: 80%" aria-valuenow="80" aria-valuemin="0" aria-valuemax="100"></div>
									</div>
									<p class="mt-4 mb-1" style="font-size: .77rem;">Website Markup</p>
									<div class="progress rounded" style="height: 5px;">
										<div class="progress-bar" role="progressbar" style="width: 72%" aria-valuenow="72" aria-valuemin="0" aria-valuemax="100"></div>
									</div>
									<p class="mt-4 mb-1" style="font-size: .77rem;">One Page</p>
									<div class="progress rounded" style="height: 5px;">
										<div class="progress-bar" role="progressbar" style="width: 89%" aria-valuenow="89" aria-valuemin="0" aria-valuemax="100"></div>
									</div>
									<p class="mt-4 mb-1" style="font-size: .77rem;">Mobile Template</p>
									<div class="progress rounded" style="height: 5px;">
										<div class="progress-bar" role="progressbar" style="width: 55%" aria-valuenow="55" aria-valuemin="0" aria-valuemax="100"></div>
									</div>
									<p class="mt-4 mb-1" style="font-size: .77rem;">Backend API</p>
									<div class="progress rounded mb-2" style="height: 5px;">
										<div class="progress-bar" role="progressbar" style="width: 66%" aria-valuenow="66" aria-valuemin="0" aria-valuemax="100"></div>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>
{% endblock %}


{% block footer %}
	{{ include('/components/footer.html.twig') }}
{% endblock %}
